generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transcription {
  id            String            @id @default(cuid())
  transcription String
  wordCount     Int
  fileName      String
  fileSize      Int
  type          String            // 'recording' | 'upload'
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  
  // Relation to enhanced prompts
  enhancedPrompts EnhancedPrompt[]
}

model EnhancedPrompt {
  id                String              @id @default(cuid())
  transcriptionId   String
  enhancedPrompt    String
  summary           String
  originalText      String
  targetAgent       String
  promptStyle       String
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  
  // Relations
  transcription     Transcription       @relation(fields: [transcriptionId], references: [id], onDelete: Cascade)
  suggestedFollowUps SuggestedFollowUp[]
  
  @@index([transcriptionId])
}

model SuggestedFollowUp {
  id              String          @id @default(cuid())
  enhancedPromptId String
  followUpText    String
  createdAt       DateTime        @default(now())
  
  // Relation to enhanced prompt
  enhancedPrompt  EnhancedPrompt  @relation(fields: [enhancedPromptId], references: [id], onDelete: Cascade)
  
  @@index([enhancedPromptId])
}
